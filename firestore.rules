rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Function to check for admin role
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }

    // Public collections (read-only for public, write for admin)
    match /(treatments|products|videos)/{docId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }
    
    // Appointments
    match /appointments/{appointmentId} {
      allow create: if request.auth != null && request.resource.data.patientId == request.auth.uid;
      allow read, update, delete, list: if isAdmin();
    }

    // Admins collection (only readable by admins to verify roles)
    match /admins/{userId} {
      allow read: if isAdmin();
    }
  }
}
