rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admins can read/write almost anything
    function isAdmin() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
    }

    // Allow logged-in users to create appointments for themselves
    match /appointments/{appointmentId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.patientId;
      // Only admins can view, update, or delete appointments
      allow read, update, delete: if isAdmin();
    }

    // Public can read treatments, products, and videos, but only admins can change them.
    match /treatments/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /products/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /videos/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Only admins can read the admin list
    match /admins/{uid} {
      allow read, write: if isAdmin();
    }
  }
}